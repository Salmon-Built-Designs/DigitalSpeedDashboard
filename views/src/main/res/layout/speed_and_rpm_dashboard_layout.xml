<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:padding="8dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical">

    <com.ngallazzi.speedandrpmdashboard.CipherView
            android:id="@+id/cvHundreds"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cvDozens"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.ngallazzi.speedandrpmdashboard.CipherView
            android:id="@+id/cvDozens"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cvHundreds"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cvDigits"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="@string/km_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUnit" app:layout_constraintStart_toEndOf="@+id/cvDigits"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            style="@android:style/Widget.DeviceDefault.Light.TextView" android:fontFamily="@font/press_start_2p"
            android:textColor="@color/colorTachometerOn" android:textSize="24sp"/>
    <com.ngallazzi.speedandrpmdashboard.CipherView
            android:id="@+id/cvDigits"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/cvDozens"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>